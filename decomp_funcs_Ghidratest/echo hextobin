
int hextobin(uchar c)

{
  switch(c) {
  case 'A':
  case 'a':
    return 10;
  case 'B':
  case 'b':
    return 0xb;
  case 'C':
  case 'c':
    return 0xc;
  case 'D':
  case 'd':
    return 0xd;
  case 'E':
  case 'e':
    return 0xe;
  case 'F':
  case 'f':
    return 0xf;
  default:
    return c - 0x30;
  }
}

